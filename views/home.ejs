<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div id="main" class="px-10 py-4">
      <nav class="flex justify-between">
        <div id="left">
          <h2 class="bg-blue-600 py-1 px-1 rounded-md text-xl text-white">Khatabook</h2>
        </div>
        <div id="right" class="flex gap-5">
          <a href="/home">Home</a>
          <a href="/create">CreateNewHisaab by Name</a>
          <a href="/createByTime">CreateNewHisaab by time</a>
        </div>
      </nav>
      <div id="center" class="mt-10">
        <h1 class="text-lg">All Hisaab Kitaab</h1>
        <% if(files.length > 0) { %>
          <% files.forEach(function(file){ %>
            <div
            class="hisaab bg-blue-600 w-fit flex gap-40 px-2 py-2 rounded-md mt-5"
          >
            <div id="left " class="flex gap-5">
              <h1 class="text-white"><%= file.split(".")[0] %></h1>
             <a href="/hisaab/<%= file %>"><i class="ri-arrow-right-line bg-white rounded-full px-1"></i></a>
            </div>
            <div id="right" class="flex justify-center items-center gap-3">
              <a href="/edit/<%= file %>"><i class="ri-pencil-line text-white"></i></a>
              <a href="/delete/<%= file %>"
                ><i
                  class="ri-delete-bin-line text-red-600 bg-white rounded-full text-lg px-1 py-1"
                ></i
              ></a>
            </div>
          </div>
          <% }) %>
          <% }  else { %>
            <h1 class="text-1xl mt-5">No Hisaab is created till now...</h1>
         <%  } %>
      </div>
    </div>
  </body>
</html>
